<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Task Name Input -->
    <EditText
        android:id="@+id/task_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Name"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <!-- Task Description Input -->
    <EditText
        android:id="@+id/task_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Description"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <!-- Priority Spinner -->
    <Spinner
        android:id="@+id/priority_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/priority_array"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_background"
        android:popupBackground="@color/white"
        android:padding="12dp" />

    <!-- Category Spinner -->
    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/category_array"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_background"
        android:popupBackground="@color/white"
        android:padding="12dp" />

    <!-- Completion Time Input -->
    <EditText
        android:id="@+id/task_completion_time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Completion Time (e.g. 1m 20s)"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Button to Save Task -->
        <Button
            android:id="@+id/save_task_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Task"
            android:backgroundTint="@color/button_save_color"
            android:textColor="@color/white" />

        <!-- Button to Go Back -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:backgroundTint="@color/button_back_color"
            android:textColor="@color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
