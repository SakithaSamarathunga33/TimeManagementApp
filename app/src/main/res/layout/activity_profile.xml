<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Toolbar for title and home button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/test"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true">

        <!-- Home button in the right corner of the toolbar -->
        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/home_button_desc"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/boy"
        android:contentDescription="Profile Picture" />

    <!-- User Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture"
        android:layout_centerHorizontal="true"
        android:text="Sakitha Samarathunga"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <!-- User Details -->
    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_centerHorizontal="true"
        android:text="Age: 24\nEmail: sakithaudarashmika@gmail.com\nPhone: 0703516238"
        android:textSize="16sp"
        android:layout_marginTop="4dp"/>

    <!-- Buttons for task categories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_details"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/view_work_tasks_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Work Tasks" />

        <Button
            android:id="@+id/view_personal_tasks_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Personal Tasks" />
    </LinearLayout>

    <!-- RecyclerView for Personal Tasks -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/personal_tasks_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/view_personal_tasks_button"
        android:layout_marginTop="16dp"
        android:visibility="gone" /> <!-- Initially hidden -->

    <!-- RecyclerView for Work Tasks -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/work_tasks_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/personal_tasks_recycler_view"
        android:layout_marginTop="16dp"
        android:visibility="gone" /> <!-- Initially hidden -->

</RelativeLayout>
