<!-- button_save_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_save_color" /> <!-- Adjusted color for pressed state -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_save_color" /> <!-- Default color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
